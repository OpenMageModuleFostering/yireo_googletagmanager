/** @var Mage_Catalog_Model_Product $product */
$product = $this->getProduct();
$data = array(
    'event' => 'productClick',
    'ecommerce' => array(
        'click' => array(
            'products' => array(
                array(
                    'name' => $product->getName(),
                    'id' => $product->getId(),
                )
            )
        )
    ),
);
?>
dataLayer.push(<?php echo $this->jsonEncode($data); ?>);